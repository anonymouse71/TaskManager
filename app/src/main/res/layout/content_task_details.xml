<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.TaskDetailsActivity"
    tools:showIn="@layout/activity_task_details">

    <FrameLayout
        android:id="@+id/Task_Details_PriorityBar"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:background="#64dd17"></FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/Task_Details_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Task Title"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/Task_Details_Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Task_Details_Title"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras tellus turpis, congue in urna sit amet, aliquam ullamcorper nisl. Phasellus et quam in eros facilisis pellentesque eget non felis."
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>




</RelativeLayout>
